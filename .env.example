# アプリケーション設定
PROJECT_NAME=Ashilog API
APP_ENV=development
PORT=8080

# データベース設定
DATABASE_URL=mysql+pymysql://username:password@hostname:3306/database?ssl_ca=DigiCertGlobalRootCA.crt.pem

# JWT設定
JWT_SECRET=your-secret-key-here
JWT_EXPIRE_HOURS=24
ALGORITHM=HS256

# CORS設定
CORS_ORIGINS=http://localhost:3000

# ファイルアップロード設定
FILE_MAX_MB=5
UPLOAD_DIR=./uploads

# ログ設定
LOG_LEVEL=INFO

# Redis設定（オプション）
REDIS_HOST=localhost
REDIS_PORT=6379

# メール設定（オプション）
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
